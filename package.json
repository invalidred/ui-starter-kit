{
  "name": "ui-starter-kit",
  "version": "1.0.0",
  "description": "Purefacts ui starter kit. This repo contains the base template to create new ui projects from 2020 onwards.",
  "main": "index.js",
  "scripts": {
    "webpack-dev-server": "webpack-dev-server",
    "webpack": "webpack",
    "test": "echo \"Error: no test specified\"",
    "lint": "tslint --project .",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "dev": "npm run webpack-dev-server -- --env.presets typescript --env.mode development --hot --open",
    "build": "npm run webpack -- --env.presets typescript --env.mode production",
    "analyze": "npm run build -- --env.presets analyze"
  },
  "keywords": [
    "ui",
    "starter-kit",
    "purefacts"
  ],
  "author": "purefacts",
  "license": "ISC",
  "devDependencies": {
    "@types/reach__router": "^1.2.6",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "1.19.1",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm run test && npm run build",
      "pre-push": "npm run format && npm run lint && npm run test && npm run build"
    }
  }
}
