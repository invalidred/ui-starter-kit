{
  "name": "ui-starter-kit",
  "version": "1.0.0",
  "description": "Purefacts ui starter kit. This repo contains the base template to create new ui projects from 2020 onwards.",
  "main": "index.js",
  "scripts": {
    "webpack-dev-server": "webpack-dev-server",
    "webpack": "webpack",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint --project .",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "dev": "npm run webpack-dev-server -- --env.presets typescript --env.mode development --hot --open --historyApiFallback --content-base src/assets ",
    "build": "npm run webpack -- --env.presets typescript --env.mode production",
    "analyze": "npm run build -- --env.presets analyze",
    "commit": "git-cz"
  },
  "keywords": [
    "ui",
    "starter-kit",
    "purefacts"
  ],
  "author": "purefacts",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/material-ui": "^0.21.7",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.0.3",
    "compression-webpack-plugin": "^3.0.1",
    "css-loader": "^3.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "file-loader": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "1.19.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.1",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@reduxjs/toolkit": "^1.0.4",
    "@types/react-redux": "^7.1.5",
    "@types/webpack-env": "^1.14.1",
    "normalize.css": "^8.0.1",
    "purewealth-ui": "file:purewealth-ui-0.101.0.tgz",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-intl": "^3.9.2",
    "react-redux": "^7.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
